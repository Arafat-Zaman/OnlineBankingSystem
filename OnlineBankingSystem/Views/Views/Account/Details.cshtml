@model OnlineBankingSystem.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<h2>Account Details</h2>

<div>
    <strong>Account Number:</strong> @Model.AccountNumber <br />
    <strong>Account Holder:</strong> @Model.AccountHolder <br />
    <strong>Balance:</strong> @Model.GetBalance() <br />
</div>

<h3>Transaction History</h3>
<ul>
    @foreach (var transaction in Model.TransactionHistory)
    {
        <li>@transaction.ToString()</li>
    }
</ul>

<a asp-controller="Transaction" asp-action="Index">Back to Transactions</a>
